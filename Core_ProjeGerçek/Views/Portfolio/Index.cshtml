@using EntitiyLayer.Concreate
@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}



<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Deneyimlerim</h4>
           
            <div class="table-responsive">
                <table class="table">
                    <thead >
                        <tr>
                            <th scope="col" class="sort" data-sort="name">Proje</th>
                            <th scope="col" class="sort" data-sort="budget">Ücret</th>
                            <th scope="col" class="sort" data-sort="status">Durum</th>
                            <th scope="col">Görseller</th>
                            <th scope="col" class="sort" data-sort="completion">Completion</th>
                            <th scope="col">Sil</th>
                            <th scope="col">Düzenle</th>
                        </tr>
                    </thead>
                    <tbody class="list">
                        @foreach(var x in Model){
                        <tr>
                            <th scope="row">
                                <div class="media align-items-center">
                                    <a href="#" class="avatar rounded-circle mr-3">
                                            <img alt="Image placeholder" src="@x.Platform">
                                    </a>
                                    <div class="media-body">
                                        <span class="name mb-0 text-sm">@x.Name</span>
                                    </div>
                                </div>
                            </th>
                            <td class="budget">
                                @x.Price
                            </td>
                            <td>
                                <span class="badge badge-dot mr-4">
                                    <i class="bg-info"></i>
                                    <span class="status">Tamamlandı</span>
                                </span>
                            </td>
                            <td>
                                <div class="avatar-group">
                                    <a href="#" class="avatar avatar-sm rounded-circle" data-toggle="tooltip" data-original-title="Ryan Tompson">
                                        <img alt="Image placeholder" src="~/argon-dashboard-master/assets/img/theme/team-1.jpg">
                                    </a>
                                    <a href="#" class="avatar avatar-sm rounded-circle" data-toggle="tooltip" data-original-title="Romina Hadid">
                                        <img alt="Image placeholder" src="~/argon-dashboard-master/assets/img/theme/team-2.jpg">
                                    </a>
                                    <a href="#" class="avatar avatar-sm rounded-circle" data-toggle="tooltip" data-original-title="Alexander Smith">
                                        <img alt="Image placeholder" src="~/argon-dashboard-master/assets/img/theme/team-3.jpg">
                                    </a>
                                    <a href="#" class="avatar avatar-sm rounded-circle" data-toggle="tooltip" data-original-title="Jessica Doe">
                                        <img alt="Image placeholder" src="~/argon-dashboard-master/assets/img/theme/team-4.jpg">
                                    </a>
                                </div>
                            </td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <span class="completion mr-2">@x.Value%</span>
                                    <div>
                                        <div class="progress">
                                            <div class="progress-bar bg-warning" role="progressbar" aria-valuenow="@x.Value" aria-valuemin="0" aria-valuemax="100" style="width: @x.Value%;"></div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                            <td>
                                    <a href="/Portfolio/RemovePortfolio/@x.PortfolioID" class="btn btn-warning m-2 ">Sil</a>
                            </td>
                            <td>
                                    <a href="/Portfolio/UpdatePortfolio/@x.PortfolioID" class="btn btn-success m-2 ">Düzenle</a>
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
                <a href="/Portfolio/AddPortfolio/" class="btn btn-info m-2 ">Proje Ekle</a>
               
            </div>
            
        </div>
       
    </div>
   
</div>

@using EntitiyLayer.Concreate
@model List<Experience>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Deneyimlerim</h4>
           
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                           <th>#</th>
                            <th>Ünvan</th>
                            <th>Firma</th>
                               <th>Fotoğraf</th>
                                <th>Tarih</th> 
                                <th>Sil</th>
                                <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {

                        <tr>
                              <td>@x.ExperienceID</td>
                            <td>@x.ExperienceAd</td>
                            <td>@x.Name</td>
                            <td><img src="@Url.Content(@x.ImageUrl)" width="50" height="50"></td>
                            <td>@x.Date</td>
                           <td>
                            <a href="/Experience/DeleteExperience/@x.ExperienceID" class="btn btn-danger">Sil</a>
                            </td>
                            <td>                      
                            <a href="/Experience/UpdateExperience/@x.ExperienceID" class="btn btn-info">Güncelle</a>
                            </td>
           
                        </tr>
                            }
                    </tbody>
                </table>
                <a href="/Experience/AddExperience" class="btn btn-primary m-3">Yeni Deneyim Ekle</a>
            </div>
        </div>
    </div>
</div>
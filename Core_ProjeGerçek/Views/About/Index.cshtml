@model EntitiyLayer.Concreate.About
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hakkımda Sayfası Güncelleme Formu</h4>
@using (Html.BeginForm("Index", "About", FormMethod.Post, new { @class = "m-5" }))
{


    @Html.HiddenFor(x=>x.AboutID)
    @Html.Label("Başlık")
    @Html.TextBoxFor(x=>x.Title, new {@class="form-control mb-2"})
    @Html.Label("Açıklama")
    @Html.TextAreaFor(x=>x.Description,5,3, new {@class="form-control mb-2"})
    @Html.Label("Yaş")
    @Html.TextBoxFor(x=>x.Age, new {@class="form-control mb-2"})
    @Html.Label("Mail")
    @Html.TextBoxFor(x=>x.Mail, new {@class="form-control mb-2"})
    @Html.Label("Telefon")
    @Html.TextBoxFor(x=>x.Phone, new {@class="form-control mb-2"})
    @Html.Label("Fotoğraf")
    @Html.TextBoxFor(x=>x.ImageUrl, new {@class="form-control mb-2"})
    @Html.Label("Adres")
    @Html.TextBoxFor(x=>x.Address, new {@class="form-control mb-2"})
    <button href="#" class="btn btn-success mt-3">Güncelle </button>



}

      </div>
    </div>
</div>
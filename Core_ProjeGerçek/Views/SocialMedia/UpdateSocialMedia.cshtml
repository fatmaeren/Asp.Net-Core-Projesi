@model EntitiyLayer.Concreate.SocialMedia

@{
    ViewData["Title"] = "UpdateSocialMedia";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Proje Ekleme Formu</h4>
            @using (Html.BeginForm("UpdateSocialMedia", "SocialMedia", FormMethod.Post, new { @class = "m-5" }))
            {


                @Html.HiddenFor(x=>x.SocialMediaID)
                @Html.Label("Platform Adı")
                @Html.TextBoxFor(x=>x.Name, new {@class="form-control mb-2"})
                @Html.Label("Link")
                @Html.TextBoxFor(x=>x.Url, new {@class="form-control mb-2"})
                @Html.Label("İcon")
                @Html.TextBoxFor(x=>x.Icon, new {@class="form-control mb-2"})
                @Html.Label("Durum")
                @Html.TextBoxFor(x=>x.Status, new {@class="form-control mb-2"})
                <button href="#" class="btn btn-success mt-3">Güncelle </button>



            }
</div>

        </div>

    </div>


@model EntitiyLayer.Concreate.Message

@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Detayları</h4>

            <form>
                <div class="form-group">

                    @Html.HiddenFor(x=>x.MessageID, new {@class="form-control"})
                </div>
                <div class="form-group">
                    <label>Gönderen Adı</label>
                    @Html.TextBoxFor(x=>x.Name, new {@class="form-control"})
                </div>
                <div class="form-group">
                    <label>Mesaj</label>
                    @Html.TextAreaFor(x=>x.Content, 5,3, new {@class="form-control"})
                </div>

            </form>
        </div>

    </div>

</div>
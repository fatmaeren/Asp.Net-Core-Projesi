@model EntitiyLayer.Concreate.Testimonial
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Detayları</h4>

            <form>
                <div class="form-group">

                    @Html.HiddenFor(x=>x.TestimonialID, new {@class="form-control"})
                </div>
                <div class="form-group">
                    <label>Müşteri Adı</label>
                    @Html.TextBoxFor(x=>x.ClientName, new {@class="form-control"})
                </div>
                <div class="form-group">
                    <label>Şirketi</label>
                    @Html.TextBoxFor(x=>x.Company, new {@class="form-control"})
                </div>
                <div class="form-group">
                    <label>Yorumu</label>
                    @Html.TextAreaFor(x=>x.Comment, 5,3, new {@class="form-control"})
                </div>

            </form>
        </div>

    </div>

</div>

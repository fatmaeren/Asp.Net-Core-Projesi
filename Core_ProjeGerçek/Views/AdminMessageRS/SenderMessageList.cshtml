@using EntitiyLayer.Concreate
@model List<WriterMessage>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Kutusu</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Alıcı Mail</th>
                            <th>Alıcı Ad</th>
                            <th>Konu</th>
                            <th>Tarih</th>
                            <th>Sil</th>
                            <th>Mesajı Görüntüle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {

                            <tr>
                                <td>@x.ID</td>
                                <td>@x.Receiver</td>
                                <td>@x.ReceiverName</td>
                                <td>@x.Subject</td>
                                <td>@x.Date.ToShortDateString()</td>
                                <td>
                                    <a href="/AdminMessageRS/DeleteMessageWriter/@x.ID" class="btn btn-outline-danger">Sil</a>
                                </td>
                                <td>
                                    <a href="/AdminMessageRS/WriterMessageDetails/@x.ID" class="btn btn-outline-info">Mesajı Görüntüle</a>
                                </td>

                            </tr>
                        }
                    </tbody>

                </table>
                <a submit="button" href="/AdminMessageRS/AddMessage" class="btn btn-success mt-3">Ekle </a>

            </div>
        </div>
    </div>
</div>
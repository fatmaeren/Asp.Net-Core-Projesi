@model EntitiyLayer.Concreate.WriterMessage
@{
    ViewData["Title"] = "MessageDetay";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Detayları</h4>

            <form>
                <div class="form-group">
                  
                    @Html.HiddenFor(x=>x.ID, new {@class="form-control"})
                </div>
                <div class="form-group">
                    <label>Gönderen Adı</label>
                    @Html.TextBoxFor(x=>x.SenderName, new {@class="form-control"})
                </div>
                <div class="form-group">
                    <label>Gönderen Mail</label>
                    @Html.TextBoxFor(x=>x.Sender, new {@class="form-control"})
                </div>
                <div class="form-group">
                    <label>Konu</label>
                    @Html.TextBoxFor(x=>x.Subject, new {@class="form-control"})
                </div>
                <div class="form-group">
                    <label>Mesaj</label>
                    @Html.TextAreaFor(x=>x.Content, 5,3, new {@class="form-control"})
                </div>

            </form>
        </div>

    </div>

</div>
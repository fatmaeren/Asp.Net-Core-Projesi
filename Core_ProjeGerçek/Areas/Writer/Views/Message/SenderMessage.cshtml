@using EntitiyLayer.Concreate
@model List<WriterMessage>
@{
    ViewData["Title"] = "SenderMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
@*@{
    string color = "";
}*@

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Giden Kutusu</h4>

            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Konu</th>
                            <th>Tarih</th>
                            <th>Alıcı</th>
                            <th>Detaylar</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var x in Model)
                        {
                            @* if (x.Status == "Yeni Yazı")
                        {
                        color = "badge badge-danger";
                        }
                        if (x.Status == "Yeni Video")
                        {
                        color = "badge badge-warning";
                        }
                        if (x.Status == "Yeni Klip")
                        {
                        color = "badge badge-success";
                        }*@
                            <tr>
                                <th>@x.ID</th>
                                <td>@x.Subject</td>
                                <td>@(((DateTime)x.Date).ToString("dd-mm-yyyy"))</td>
                                <td>@x.ReceiverName</td>
                                <td><a href="/Writer/Message/MessageDetails/@x.ID" class="btn btn-outline-primary">Mesajı Görüntüle</a></td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>



@model EntitiyLayer.Concreate.WriterMessage
@{
    ViewData["Title"] = "AddMessage";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Detayları</h4>

            <form method="post">
                <div class="form-group">
                    <label>Alıcı</label>
                    @Html.TextBoxFor(x=>x.Receiver, new {@class="form-control"})
                </div>
                <div class="form-group">
                    <label>Konu</label>
                    @Html.TextBoxFor(x=>x.Subject, new {@class="form-control"})
                </div>
                <div class="form-group">
                    <label>Mesaj</label>
                    @Html.TextAreaFor(x=>x.Content, 5,3, new {@class="form-control"})
                </div>
                <button class="btn btn-outline-primary">Gönder</button>
            </form>
        </div>

    </div>

</div>
